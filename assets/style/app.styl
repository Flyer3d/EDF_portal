// Import Vuetify styling
@import "./theme.styl"
@import "./static.styl"
@require '~vuetify/src/stylus/main.styl'
@import "./vuetify_correct.styl"
@import "./wbif.styl"
@import "./wbif_vuetify_correct.styl"

main.content
  padding-bottom 36px !important

.custom-loader {
  animation: loader 1s infinite;
  display: flex;
}
@keyframes loader {
  from {
    transform: rotate(0);
  }
  to {
    transform: rotate(360deg);
  }
}

.page

  .loading
    width: 100%;
    height 100%;
    top 0
    left 0
    z-index 100
    background rgba(255, 255, 255, 0.4)
    position absolute;


    .loading
      &__spinner
        position absolute
        top calc(50% - 75px)
        left calc( 50% - 75px )
        opacity: 0.5

  .fullwidth
    max-width 100%

  @extend .fade-transition
  min-width 900px

 .container.fluid
   background transparent
 .container
   padding 0

  .html-content
  .widget-field__documentation
    margin 20px
    font: 300 18px "PT Sans"
    line-height 1.4

    div, a
      padding: 20px 0
      margin 0

    p
      padding 10px 0
      margin 0

    .lead
      font-size 18px
      line-height 1.6

    .text-left
      text-align left

    .text-center
      text-align center

    .text-right
      text-align right

    .text-justify
      text-align justify

    ul
      margin 0
      padding 0

    ul li
      display block
      position relative
      padding-left 25px
      margin-bottom 10px

    ul li:before
      content: "\f105"
      font: normal 15px "FontAwesome";
      display: inline-block
      width: 1em
      margin-left: -1em
      color: #dd4b57

    table
      font-size: 14px;
      border-collapse: collapse;
      text-align: left;
      width 100%
      line-height 1.6
      margin 20px 0 40px

      p, div
        padding 0

    td, th
      border-style: solid;
      border-width: 0 1px 1px 0;
      border-color: $color_border;
      padding: 10px 20px;
      width 50%

    td:last-child, th:last-child
      border-width: 0 0px 1px 0;

    thead
      background-color $rose_br_color
      td, th
        border 1px solid $color_white

    ul
      margin 0
      padding 0

    ul li
      display block
      position relative
      padding-left 25px
      margin-bottom 4px

    ul li:before
      content: "";
      position: absolute;
      top: 10px;
      left: 0
      width: 8px;
      height: 8px;
      background: $rose_red
      border-radius: 4px;

    ol
      counter-reset li
      list-style none
      padding 0
      margin 0

    ol li
      display block
      position relative
      //padding-left 25px
      //margon-bottom 4px
      margin: 0 0 6px 40px;
      padding: 12px 8px;

    ol li:before
      content: counter(li);
      counter-increment: li;
      position: absolute;
      //top: 7px;
      left: -35px;
      text-align: center;
      line-height: 24px;
      width: 24px;
      height: 24px;
      background: $rose_red
      font-style: normal;
      border-radius: 1em;
      font-size: 14px;
      font-weight: bold;
      color: #fff;

    dl
      margin 0

    dt
      color: #000000
      display: inline-block
      width: 23%
      margin: 0 0 10px
      font: 700 18px 'PT Sans'
      vertical-align: top
      box-sizing: border-box
      break-after: avoid
      break-inside: avoid
      position: relative

      br
        display: none

      .weekday
        display: inline

    dd
      color: #000000
      display: inline-block
      width: 76%
      margin: 0 0 30px
      font-size: 15px
      line-height: 1.6
      break-before: avoid
      break-inside: avoid
      break-after: auto

    dt, dd
      +below($mobile-width)
        width 100%


    .example
      border: 2px solid #f5f5f1;
      border-radius: 10px;
      padding: 20px;
      padding-bottom: 0;
      margin: 0 -20px 40px -20px;

      pre
        border-radius: 0 0 10px 10px;
        margin: 0 -20px;
        overflow: auto;

      code
        padding: 15px;
        max-height: 200px;
        font-size: 14px;
        font-family: "Consolas", courier, typewriter, monospace;
        display: block;
        overflow-x: auto;
        color: #333;
        background: #f8f8f8;



.widget-field
  align-items: center
  margin-top 8px

  &__field .input-group
    padding 8px 0 0

  //.checkbox label
  //&__label
  //  font-weight 700
  //  color #000 !important

  &__description
    font-size: 80%;
    font-style: italic;
    //background-color: #eee;
    line-height: 1.4;
    padding: 10px;

  &__error input
    background: #FDD;

nav.widget-field
  margin-top 4px
  &:first-of-type
    margin-top 16px

  &_action
    border 1px solid #cccccc
    box-shadow: 0px 1px 1px -1px rgba(0, 0, 0, .2), 0px 1px 1px 0px rgba(0, 0, 0, .14), 0px 1px 1px 0px rgba(0, 0, 0, .12);
    margin-top 8px
