.site
  min-width 1200px
  font-family Rubik
  font-size 14px
  font-weight normal
  font-style normal
  font-stretch normal
  line-height 1.5
  letter-spacing normal
  color #35323f
  position relative

  .site__notification
    position absolute
    top 40px
    left 56px
    overflow inherit
    .v-btn__close
      width 40px
      height 40px
      top 40px !important
      right 40px !important
      &_small
        width 40px
        height 40px
        top 20px !important
        right 20px !important

  .site__chat
    max-width 360px
    position absolute
    top 72px
    left 72px
    overflow inherit
    background-color #e8e7eb
    min-height 40vh

  .site__notifications
    position absolute
    top 72px
    left 72px
    overflow inherit
    background-color #e8e7eb
    min-height 40vh

  .v-btn__close
    width 24px
    height 24px
    font-size 16px
    top -12px !important
    right -12px !important


  .theme--dark.v-btn:not(.v-btn--icon):not(.v-btn--flat)
    background-color #4a4757

  a
    text-decoration none

  .v-btn
  .v-tabs__div
    text-transform none

  .v-btn .v-btn__content
    font-family Rubik
    font-size 14px
    font-weight 500

  main.v-content.pages
    padding-left 80px !important

  .v-btn-toggle--round
    border-radius 24px
    overflow hidden


  .v-stepper.flat
    box-shadow none

  .google-map .v-text-field__details
    display none

  .v-avatar.avatar--outlineafter
    border solid 1px #cdcdcd
    border-radius 50%
    content ''
    display block
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  .v-divider.v-divider--extend
  .v-progress-linear.v-progress-linear--extend
    margin-left -16px
    margin-right -16px
    width calc( 100% + 32px )
    max-width calc( 100% + 32px )

  .v-navigation-drawer--mini-variant .v-subheader.permanent
  .v-navigation-drawer--mini-variant .v-divider.permanent
  .v-navigation-drawer--mini-variant .v-list--group.permanent
  .permanent
    display block !important

  .v-input--selection-controls
  .v-input--selection-controls .v-input__slot
    margin 0


  h1
  h2
  h3
  h4
  h5
  h6
    font-family Rubik
    font-style normal
    font-stretch normal
    letter-spacing 0.04em

  h1
    font-size 30px
    font-weight bold
    line-height 1.27
    color #222222

  h2
    font-size 20px
    font-weight bold
    line-height 1.2
    //line-height 1.7

  h3
    font-size 16px
    font-weight 500

  h4
    font-size 14px
    font-weight bold



  h1.dark
  h2.dark
  h3.dark
  h4.dark
  h5.dark
  h6.dark
    color #ffffff

  h1.medium
  h2.medium
  h3.medium
  h4.medium
    font-weight 500

  .title__label
    opacity 0.8
    font-family Rubik
    font-size 14px
    font-weight 500

  .text__small
    font-size 12px
    line-height 1.4

  .text__small.bold
    font-weight 500


  .text__label
    opacity 0.5
    font-size 16px
    font-weight 500
    line-height 1.31
    &.dark
      color #ffffff

  .text__label_small
    opacity 0.7
    font-size 12px
    font-weight 500
    line-height 1.33
    color #524f5f
    &.dark
      color #ffffff

  .text__label_tiny
    opacity 0.8
    font-family Rubik
    font-size 10px
    font-weight 500
    font-style normal
    font-stretch normal
    line-height 1.2
    letter-spacing normal
    color #524f5f
    &.dark
      color #ffffff

  .input__label
    font-family Rubik
    font-size 16px
    font-weight normal
    font-style normal
    font-stretch normal
    line-height normal
    letter-spacing normal
    color #524f5f

  .form__label
    position relative
    font-size 12px
    font-weight 500
    line-height 1.17
    color #524f5f

    &.dark
      opacity 0.7
      color white

    &.disabled
      opacity 0.3

  .required.form__label:before
    display block
    font-family Rubik
    font-size 20px
    font-weight 500
    content '*'
    color #ff0000
    position absolute
    top 0
    left -20px
